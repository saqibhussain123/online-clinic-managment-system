<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/Content/lib/owlcarousel/owl.carousel.js" rel="stylesheet">
    <link href="~/Content/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/Content/css/style.css" rel="stylesheet">

</head>
<body style="margin:auto">
    <!-- Sidebar Start -->
    <div class="sidebar pe-4 pb-3">
        <nav class="navbar bg-light navbar-light">
            <a href="index.html" class="navbar-brand mx-4 mb-3">
                <h3 class="text-primary"><i class="fa fa-hashtag me-2"></i>DASHMIN</h3>
            </a>
            <div class="d-flex align-items-center ms-4 mb-4">
                <div class="position-relative">
                    <img class="rounded-circle" src="img/user.jpg" alt="" style="width: 40px; height: 40px;">
                    <div class="bg-success rounded-circle border border-2 border-white position-absolute end-0 bottom-0 p-1"></div>
                </div>
                <div class="ms-3">
                  
                    <span>Admin</span>
                </div>
            </div>
            <div class="navbar-nav w-100">
                <a href="~/Home/Index" class="nav-item nav-link active"><i class="fa fa-tachometer-alt me-2"></i>Dashboard</a>
                @Html.Partial("_LoginPartial")
                <div class="nav-item dropdown">
                    <a href="~/Home/Contact" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="fa fa-laptop me-2"></i>Manage Products</a>
                    <a href="~/Doctor_Name/Index" class="nav-item nav-link"><i class="fa fa-th me-2"></i>Manage Doctors</a>
                    <a href="~/Home/ManageDoctors" class="nav-item nav-link"><i class="fa fa-keyboard me-2"></i>View Appointments</a>
                    <a href="~/Pharmacies/Index" class="nav-item nav-link"><i class="fa fa-table me-2"></i>Manage Pharmacy</a>
                    <a href="~/Pharmacies/Index" class="nav-item nav-link"><i class="fa fa-table me-2"></i>Manage lab</a>
                    <a href="~/Doctor_Name/Index" class="nav-item nav-link"><i class="fa fa-table me-2"></i>Manage Doctors</a>
                   
                </div>


            </div>
        </nav>
    </div>
    <!-- Sidebar End -->
   
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    
    <script src="~/content/js/bootstrap.bundle.min.js"></script>
    <script src="~/content/vendor/owl-carousel/js/owl.carousel.min.js"></script>
    <script src="~/content/vendor/wow/wow.min.js"></script>
    <script src="~/content/js/theme.js"></script>
</body>
</html>
